package com.app.service;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.app.entities.Patient;
import com.app.repo.IPatientRepo;

import io.swagger.v3.oas.annotations.parameters.RequestBody;

@Service
@Transactional
public class PatientService implements IPatientService {

	@Autowired
	private IPatientRepo patientRepo;

	@Override
	public Patient addPatientDetials(Patient patient) {
		return patientRepo.save(patient);
	}

	public Patient loginPatient(@RequestBody String email, String password) {
		return patientRepo.findByEmailandPasswordPatient(email, password);
	}

}
