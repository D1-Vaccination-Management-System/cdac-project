package com.app.service;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.app.dto.AddPateintDTO;
import com.app.entities.Patient;
import com.app.repo.IPatientRepo;

@Service
@Transactional
public class PatientService implements IPatientService {

	@Autowired
	private IPatientRepo patientRepo;

	@Override
	public Patient addPatientDetials(AddPateintDTO patient) {
		return patientRepo.saveAll(patient);
	}

	@Override
	public Patient loginPatient(String email, String pass) {
		return patientRepo.findByEmailAndPassword(email, pass);
	}
}
